{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/tsc-out",
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "jsx": "react",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "declaration": true,
    "skipLibCheck": true
  },
  "include": [
    "./src",
    "./src/**/package.json"
  ],
  "exclude": [
    "./**/*.spec.ts",
    "./**/*.spec.tsx"
  ]
}
